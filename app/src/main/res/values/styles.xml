<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/burgundy_primary</item>
        <item name="colorPrimaryDark">@color/burgundy_dark</item>
        <item name="colorAccent">@color/burgundy_light</item>

        <!-- Фон и текст -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/text_light_secondary</item>
    </style>
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@android:color/black</item> <!-- Черный фон -->
        <item name="android:textColor">@android:color/white</item> <!-- Белый текст -->
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/burgundy_primary</item>
    </style>
</resources>